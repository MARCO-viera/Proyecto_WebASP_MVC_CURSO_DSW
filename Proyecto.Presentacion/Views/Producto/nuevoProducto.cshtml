@model Proyecto.Presentacion.Models.ProductoO

@{
    ViewData["Title"] = "Nuevo Producto";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h1 class="text-center">Nuevo Producto</h1>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-header">
        <h4>Registrar Nuevo Producto</h4>
    </div>
    <div class="card-body">
        <form asp-action="nuevoProducto">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="nom_prod" class="control-label"></label>
                <input asp-for="nom_prod" class="form-control" />
                <span asp-validation-for="nom_prod" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="des_prod" class="control-label"></label>
                <input asp-for="des_prod" class="form-control" />
                <span asp-validation-for="des_prod" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="id_categoria" class="control-label"></label>
                <div class="input-group">
                    @Html.DropDownListFor(model => model.id_categoria, (SelectList)ViewBag.categoria, "(Seleccione una Categoría)", new { @class = "form-control" })
                </div>
                <span asp-validation-for="id_categoria" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="pre_prod" class="control-label"></label>
                <input asp-for="pre_prod" class="form-control" />
                <span asp-validation-for="pre_prod" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="stock" class="control-label"></label>
                <input asp-for="stock" class="form-control" />
                <span asp-validation-for="stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
    <div class="card-footer text-end">
        <a asp-action="listadoProductos" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>
